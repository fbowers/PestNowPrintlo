  <script type='text/javascript'>
    //<![CDATA[
    jQuery(function() {
      jQuery().busy("preload");

      jQuery().busy("defaults", { img : '/images/busy.gif' });

      jQuery(window).resize(function() {
        jQuery().busy("reposition");
      });

      jQuery('.example-default').click(function() {
        var that = jQuery(this).busy();

        setTimeout(function() {
          that.busy("hide");
        }, 2000);
      });

      jQuery('.example-position').click(function() {
        var that = jQuery(this).busy({ position : 'right', hide : false });

        setTimeout(function() {
          that.busy("hide");
        }, 2000);
      });

      jQuery(".example-reposition").busy();
    });

